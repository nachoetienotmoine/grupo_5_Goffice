<!DOCTYPE html>
<html lang="en">

<%- include('./head.ejs')%>

    <body>
        <%- include('./header2.ejs') %>
            <main class="todo-productos-main">

                <section class="contenedortotalCarrito">
                    <section class="contendedordeloscontendoresdelCarrito">

                        <section class="contenedor2">
                            <article class="box-checkout">
                                <article class="contenedorproducto">
                                    <h2 class="h2-nombre">
                                       
                                        Forma de pago

                                    </h2>


                                    <form action="" class="formcheckout">

                                        <select name="pagosMetodo">

                                            <% pagos.forEach(pago=> { %>
                                                <option value="<%= pago.method %>" 
                                                    <% if (pago.id == 2) { %><%= 'selected' %><% }; %>>
                                                    <%= pago.method %>
                                                </option>
                                                <% }); %>
                                        </select>




                                        <div class="field name_field">
                                            <label class="register_label" name="firstname">Name</label>
                                            <input type="text" name="firstname" id="name" required minlength="5"
                                                maxlength="18">
                                        </div>
                                        <div class="error_field">Ingrese su nombre</div>



                                        <div class="field email_field">
                                            <label class="register_label" name="email">Email</label>
                                            <input type="email" name="email" id="email" required>
                                        </div>
                                        <div class="error_field">Ingrese su correo electr√≥nico</div>


                                        <div class="field name_field">
                                            <label class="register_label" name="name">Phonenumber</label>
                                            <input type="number" name="phonenumber" id="name" required minlength="5"
                                                maxlength="18">
                                        </div>

                                        <div class="field name_field">
                                            <label class="register_label" name="codigoP">Postal Code</label>
                                            <input type="number" name="phonenumber" id="name" required minlength="5"
                                                maxlength="18">
                                        </div>
                                        <div class="field name_field">
                                            <label class="register_label" name="provincia">Provincia</label>
                                            <input type="text" name="gender" id="name" required>
                                        </div>
                                        <div class="field name_field">
                                            <label class="register_label" name="ciudad">Ciudad</label>
                                            <input type="text" name="gender" id="name" required>
                                        </div>
                                        <div class="field name_field">
                                            <label class="register_label" name="piso-departamento">Piso o
                                                departamento</label>
                                            <input type="text" name="gender" id="name" required>
                                        </div>
                                    </form>





                                </article>
                            </article>
                        </section>
                        <br>


                    </section>
                    <br>

                    <article class="precio-envio-checkout"><div class="resumen">
                                <h2>Resume</h2>
    
                            </div>
                        <% for (let i=0; i < productosJ.length ; i++) {%>
                            
                            <article class="productoCheckout">
                                <div class="nombreProductoAgregado">
                                    <%= productosJ[i].name; %>
                                </div>
                                <div class="nombreProductoAgregado"> $<%= productosJ[i].price; %>
                                </div>
                            </article>
                            <% } %>

                                <div class="preciofinal">
                                    <h3>Total price</h3>


                                    <h3>$<%= userCart.total_price; %>
                                    </h3>



                                </div>
                                <div class="comprar">
                                    <button class="botoncompra">
                                        Buy
                                    </button>
                                </div>

                    </article>

                </section>
            </main>
            <%- include('./footer.ejs') %>
    </body>